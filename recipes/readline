name=readline
revision=1
from_source=readline
imagedeps="build-essential"
hostdeps="xgcc xbinutils libtool pkgconfig"
deps="base ncurses"

configure() {
	${source_dir}/configure --host=x86_64-linux-mlibc --prefix=${prefix} --enable-multibyte --disable-static --enable-shared
}

build() {
	make -j${parallelism} SHLIB_LIBS="-lncursesw"
}

package() {
	make install SHLIB_LIBS="-lncursesw" DESTDIR="${dest_dir}"
}

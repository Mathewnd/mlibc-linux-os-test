name=libgpg-error
revision=1
from_source=libgpg-error
imagedeps="gcc build-essential"
hostdeps="xgcc xbinutils pkgconfig libtool"
deps="mlibc gcc-libs"

configure() {
	${source_dir}/configure --prefix=${prefix} --host=x86_64-linux-mlibc --enable-shared --disable-static --enable-install-gpg-error-config
}

build() {
	make -j${parallelism}
}

package() {
	make install DESTDIR=${dest_dir}
}

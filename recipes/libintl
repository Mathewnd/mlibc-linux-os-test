name=libintl
revision=1
from_source=gettext
imagedeps="build-essential autoconf automake"
hostdeps="xgcc xbinutils pkgconfig libtool"
deps="mlibc gcc-libs"
#skip_pkg_check=yes

configure() {
	cp -rp ${source_dir}/* .
	ACLOCAL=true AUTCONF=true AUTOMAKE=true AUTOHEADER=true ./configure \
	--host=x86_64-linux-mlibc --prefix=${prefix} --without-emacs --without-lispdir --enable-nls --with-included-gettext --disable-c++ --disable-libasprintf --disable-java --enable-threads=posix --disable-curses --without-git --without-cvs --without-bzip2 --without-xz --disable-static
	sed -i 's/touch $@//g' gettext-runtime/intl/Makefile
}

build() {
	make -C gettext-runtime/intl -j${parallelism}
}

package() {
	make install -C gettext-runtime/intl DESTDIR=${dest_dir}
}

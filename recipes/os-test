name=os-test
revision=1
from_source=os-test
imagedeps="build-essential"
hostdeps="xgcc xbinutils"
deps="base"

build() {
	cp -rpa ${source_dir}/* .
	make -j${parallelism} OS=mlibc CC=x86_64-linux-mlibc-gcc CC_FOR_BUILD=gcc
}

package() {
	mkdir -pv "${dest_dir}/usr/share/os-test"
	cp -rpa * "${dest_dir}/usr/share/os-test"
}

name=xbinutils
revision=1
from_source=binutils
imagedeps="build-essential gcc"

configure() {
	${source_dir}/configure --target=x86_64-linux-mlibc --prefix=${prefix} --with-sysroot=${sysroot_dir} --disable-werror --enable-default-execstack=no
}

build() {
	make -j${parallelism}
}

package() {
	make install DESTDIR="${dest_dir}"
}

name=libtool
revision=1
from_source=libtool
imagedeps="gcc build-essential help2man autoconf automake"

configure() {
	cp -pr ${source_dir}/* .
	cp -pr ${source_dir}/.* .
	./configure --prefix=${prefix} --with-gnu-ld --enable-shared --disable-static
}

build() {
	make -j${parallelism}
}

package() {
	make install DESTDIR="${dest_dir}"
}
